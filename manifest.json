{
	"name": "Bindr",
		"version": "0.2",
		"description": "Per-page/site/global keybindings with built-in bindings",
		"browser_action": {
			"default_icon":  "icon.png",
			"default_popup": "popup.html"
		},
		"background_page": "background.html",
		"permissions": [
			"*://*/*",
			"notifications",
			"tabs"
		],
		"content_scripts" : [{
			"matches": ["http://*/*"],
			"js" : ["js/jquery.js", "js/lib.js", "js/baseline.js"],
			"run_at" : "document_end"
		}]

}
